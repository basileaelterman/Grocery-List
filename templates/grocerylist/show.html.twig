{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}

    <nav>
        <a href="{{ path('app_home') }}">home</a> / 
        <a href="{{ path('app_grocerylist') }}">groceries</a> / 
        <a href="{{ path('app_grocerylist_product', {id: product.id}) }}">{{ product.name }}</a>
    </nav>

    <h1>{{ product.name }}</h1>

    <table>
        <thead>
            <th>Details</th>
            <th>Amount</th>
        </thead>
        <tbody>
            <tr>
                <td>{{ product.details }}</td>
                <td>{{ product.amount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li><a href="{{ path('app_grocerylist_update', {id: product.id}) }}">Update {{ product.name }}</a></li>
        <li><a href="{{ path('app_grocerylist_delete', {id: product.id}) }}">Delete {{ product.name }}</a></li>
    </ul>
        

{% endblock %}